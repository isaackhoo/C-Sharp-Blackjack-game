        <!-- Decks and Game Controls-->
        <Grid
            Grid.Column="1"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="2*" />
                <RowDefinition
                    Height="2*" />
                <RowDefinition
                    Height="*" />
            </Grid.RowDefinitions>

            <!--Discard Deck Display-->
            <Grid
                Grid.Column="0"
                Grid.Row="1"
                Grid.RowSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Border
                    BorderThickness="1"
                    BorderBrush="{x:Static theme:Brushes.CardBorder}"
                    Background="{x:Static theme:Brushes.CardWhite}"
                    CornerRadius="5"
                    Width="150"
                    Height="210"
                    Padding="5">
                    <Border
                        BorderThickness="4"
                        BorderBrush="{x:Static theme:Brushes.Primary}"
                        CornerRadius="5"
                        Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Text="Discard"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{x:Static theme:Brushes.TextBlack}"
                                FontSize="{x:Static theme:Font.Title}" />
                            <TextBlock
                                Grid.Row="1"
                                Name="DiscardDeckCountTextBlock"
                                Text="{Binding Path=(model:GameState.DiscardDeckCount), Mode=TwoWay}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{x:Static theme:Brushes.Secondary}"
                                FontSize="{x:Static theme:Font.Headline}" />
                            <TextBlock
                                Grid.Row="2"
                                Text="Pile"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{x:Static theme:Brushes.TextBlack}"
                                FontSize="{x:Static theme:Font.Title}" />
                        </Grid>
                    </Border>
                </Border>
            </Grid>

            <!--Game Controls-->
            <TextBlock
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Name="GameTextFeedback"
                Text="i"
                Foreground="{x:Static theme:Brushes.Primary}"
                FontSize="{x:Static theme:Font.Title}" />

            <!--Game action buttons-->
            <Grid
                Name="GameControlButtonGroup"
                Grid.Row="1"
                Grid.Column="1"
                Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                </Grid.RowDefinitions>
                <Button
                    Grid.Row="0"
                    Margin="0, 5"
                    Name="HitButton"
                    Content="HIT"
                    FontSize="{x:Static theme:Font.Title}"
                    Click="OnHitButtonPress" />
                <Button
                    Grid.Row="1"
                    Margin="0, 5"
                    Name="StayButton"
                    Content="STAY"
                    FontSize="{x:Static theme:Font.Title}"
                    Click="OnStayButtonPress" />
            </Grid>

            <!--Active Deck Display-->
            <Grid
                Grid.Column="2"
                Grid.Row="1"
                Grid.RowSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Border
                    BorderThickness="1"
                    BorderBrush="{x:Static theme:Brushes.CardBorder}"
                    Background="{x:Static theme:Brushes.CardWhite}"
                    CornerRadius="5"
                    Width="150"
                    Height="210"
                    Padding="5">
                    <Border
                        BorderThickness="4"
                        BorderBrush="{x:Static theme:Brushes.Primary}"
                        CornerRadius="5"
                        Padding="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Text="Deck"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{x:Static theme:Brushes.TextBlack}"
                                FontSize="{x:Static theme:Font.Title}" />
                            <TextBlock
                                Grid.Row="1"
                                Name="ActiveDeckCountTextBlock"
                                Text="{Binding Path=(model:GameState.ActiveDeckCount), Mode=TwoWay}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{x:Static theme:Brushes.Secondary}"
                                FontSize="{x:Static theme:Font.Headline}" />
                        </Grid>
                    </Border>
                </Border>
            </Grid>
        </Grid>

        <!--Player Hand-->
        <Grid
            Grid.Column="1"
            Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition
                    Height="*" />
                <RowDefinition
                    Height="4*" />
            </Grid.RowDefinitions>
            <!--Player score-->
            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    Text="Your Hand's Score: "               
                    DataContext="{Binding player}"
                    Foreground="{x:Static theme:Brushes.Primary}"
                    FontSize="{x:Static theme:Font.Title}" />
                <TextBlock
                    Name="PlayerHandScoreTextBlock"
                    Text="{Binding Path=Hand.TotalPoints}"
                    DataContext="{Binding player}"
                    Foreground="{x:Static theme:Brushes.Primary}"
                    FontSize="{x:Static theme:Font.Title}" />
            </StackPanel>


            <!--Player Hand-->
            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <ItemsControl
                    x:Name="RevealedPlayerHandList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                BorderThickness="1"
                                BorderBrush="{x:Static theme:Brushes.CardBorder}"
                                Background="{x:Static theme:Brushes.CardWhite}"
                                CornerRadius="5"
                                Width="150"
                                Height="210"
                                Padding="5"
                                Margin="5,0">
                                <Border
                                    BorderThickness="4"
                                    BorderBrush="{x:Static theme:Brushes.Primary}"
                                    CornerRadius="5"
                                    Padding="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition
                                                Height="*" />
                                            <RowDefinition
                                                Height="*" />
                                            <RowDefinition
                                                Height="*" />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="1"
                                            Orientation="Vertical">
                                            <TextBlock
                                                Text="{Binding Display}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{x:Static theme:Brushes.Secondary}"
                                                FontSize="{x:Static theme:Font.Title}" />
                                            <TextBlock
                                                Text="{Binding Suit}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{x:Static theme:Brushes.Secondary}"
                                                FontSize="{x:Static theme:Font.Title}" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>


        <!--Player Hand Points-->
        <TextBlock
            Grid.Column="2"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Path=TotalPoints }"
            DataContext="{Binding player}" />

    </Grid>
</Page>
